@using LoginPage.Models
@model Table
@{
    ViewData["Title"] = "Register";
}
<h1>@ViewData["Title"]</h1>

<h1>yapılacaklar statu datasını viewbag ile geçirmenin bir yolunu bul</h1>

<h1>database griiş çıkılarını kontrol edebil</h1>
<h1>kopyalanan dosyaları düzelt</h1>

<form method="POST" asp-action="Create" autocomplete="off">
    <div class="form-group">
        <input type="text" asp-for="_name">
        <input type="text" asp-for="_name" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" asp-for="_surname" class="form-control">
    </div>
    <div class="form-group">
        <input type="text" asp-for="_age" class="form-control">
    </div>
    <div class="form-group">
        @if (Model._name == null)
        {
            <button type="submit" class="btn btn-primary">Create</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary">Update</button>
        }
    </div>
</form>